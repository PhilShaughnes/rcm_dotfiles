set number
set tabstop=2             " tab spacing
set softtabstop=2         " unify
set shiftwidth=2          " indent/outdent by 2 columns
set shiftround            " always indent/outdent to the nearest tabstop
set expandtab
set smarttab
filetype indent on
set lazyredraw
set hlsearch              " Don't continue to highlight searched phrases.
set incsearch             " But do highlight as you type your search.
set mouse=a
set autowrite
set autoread
set noswapfile
set nobackup
set laststatus=0
set inccommand=nosplit
set ruler
set clipboard=unnamed     " use the system clipboard as default
set list listchars=tab:»\ ,trail:·,nbsp:· ",eol:¬ ,space:· " display extra white space
set shortmess=a

:augroup numbertoggle
:  autocmd!
:  autocmd BufEnter,FocusGained,InsertLeave * set relativenumber
:  autocmd BufLeave,FocusLost,InsertEnter   * set norelativenumber
:augroup END

if executable('rg')
  let g:grepprg = 'rg --vimgrep'
endif

"************"
"** KEYMAP **"
"************"

" leader k to hook into documentation lookup (we will remap K below)
noremap <leader>k K
" J/K to go to above/below white space (paragraph)
noremap K     {
noremap J     }
noremap H     ^
noremap L     $
" make marks more better (go to column instead of line)
nnoremap ' `

" Y goes to end of line
nnoremap Y y$
" Select your Leader key
let mapleader = "\<Space>"
" Enter cancels search highlighting
nnoremap \ :nohlsearch<CR>

" buffer switch
nnoremap <leader>l :ls<CR>:b<space>

" visual up and down
nmap j gj
nmap k gk

" Tab and S-Tab indent in normal and visual mode
nnoremap <Tab>   >>
nnoremap <S-Tab> <<
vnoremap <Tab>   >><Esc>gv
vnoremap <S-Tab> <<<Esc>gv

" highlight last inserted text
nnoremap gV `[v`]

" Move visual block
vnoremap J :m '>+1<CR>gv=gv
vnoremap K :m '<-2<CR>gv=gv

"*************"
"*** PLUGS ***"
"*************"

call plug#begin('~/.vim/plugged')
  source ~/dotfiles/nvim/plugins.vim
  " text object
  " essentials
  " completion
  " markdown
  " lsp
  " useability
  " htmlcss
  " elixir
  " ruby
  " theme

call plug#end()

"*************"
"*** THEME ***"
"*************"

set termguicolors
set background=dark
colorscheme two-firewatch
